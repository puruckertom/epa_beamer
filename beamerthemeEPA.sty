%Set up the Banner with EPA logo
\usepackage{tikz}
\usetikzlibrary{fadings,shadows,shapes.geometric}
\usepackage[skins]{tcolorbox}
\usetikzlibrary{shadows}
\usetikzlibrary{shapes.geometric}
\tikzset{
  ashadow/.style={opacity=.15, shadow xshift=0.02, shadow yshift=-0.07,scale=1.25}
  }
\tikzset{
  leftframebanner/.pic={
  code={
    
    %draw the left banner background needed because next command doesn't provide fill
    \filldraw[fill=white,draw=white,draw opacity=0.5,drop shadow={ashadow, color=white!20!black}] 
      (0,0) -- (0.225\paperwidth,0) -- (0.317\paperwidth,-0.1333\paperheight) --(0,-0.1333\paperheight) -- cycle;
    %draw the left banner with epa logo image
    \path[fill plain
      image*={width=0.15\paperwidth}{EPA_logo_green.png}]
      (0.05,0) --(0.225\paperwidth,0) -- (0.225\paperwidth,-0.1333\paperheight) --(0.05,-0.1333\paperheight) -- cycle;
      }
    },
  rightframebanner/.pic={
    code={
    
      %draw the frametitle banner on right
      \filldraw[fill=white,draw=white,drop shadow={ashadow, color=white!20!black}]
        (0.25\paperwidth,0) -- (\paperwidth,0) -- (\paperwidth,-0.1333\paperheight) --(0.342\paperwidth,-0.1333\paperheight) -- cycle;
      %add frametitle text node
      \draw (0.372\paperwidth,-0.0671\paperheight) node[anchor=west, text width=0.6\paperwidth]{\insertframetitle};
      }
    }
  }


\mode
<all>
