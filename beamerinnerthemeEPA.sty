\usepackage{tikz}
\usetikzlibrary{calc,fadings}
\tikzfading[name=fade l,left color=transparent!100,right color=transparent!0]
\tikzfading[name=fade r,right color=transparent!100,left color=transparent!0]
\tikzfading[name=fade d,bottom color=transparent!100,top color=transparent!0]
\tikzfading[name=fade u,top color=transparent!100,bottom color=transparent!0]

% this "frames" a rectangle node
\newcommand\framenode[2][10pt]{
    \draw[fill=black!2!white] (0,0) rectangle (\paperwidth,\paperheight);
    \fill[black!20!white,path fading=fade d] (0,\paperheight) rectangle (\paperwidth,0.85\paperheight);
    \fill[black!20!white,path fading=fade u] (0,0) rectangle (\paperwidth,0.15\paperheight);
    \fill[black!20!white,path fading=fade l] (\paperwidth,0) rectangle (0.85\paperwidth,\paperheight);
    \fill[black!20!white,path fading=fade r] (0,0) rectangle (0.15\paperwidth,\paperheight);
}

\usebackgroundtemplate{
 \begin{tikzpicture}
 
  \node[anchor=south west,inner sep=0] (frame) at (0,0) {};
\framenode[15pt]{frame}

 \end{tikzpicture}

